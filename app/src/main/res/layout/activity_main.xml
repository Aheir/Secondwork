<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/actL"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt"
        android:layout_marginTop="30dp"
        android:text="Activity作为监听器"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/anonL"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/actL"
        android:text="匿名内部类" />

    <Button
        android:id="@+id/tagL"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/anonL"
        android:onClick="tag"
        android:text="绑定到标签" />

    <Button
        android:id="@+id/inL"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tagL"
        android:text="内部类" />

    <Button
        android:id="@+id/outL"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/inL"
        android:text="外部类" />

    <Button
        android:id="@+id/bkL"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/outL"
        android:text="ButterKnif绑定"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/cfg"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bkL"
        android:layout_marginTop="50dp"
        android:text="系统信息" />

    <Button
        android:id="@+id/pgs"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cfg"
        android:text="进度条模拟" />


</RelativeLayout>